<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="./css/materialize.css"  media="screen,projection"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Home</title>
  <script src="https://www.gstatic.com/firebasejs/6.2.0/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/6.2.0/firebase-auth.js"></script>
  <script src="home-script.js"></script>
  <link rel='stylesheet' href='./pbl_css/home.css' />

</head>
<body>
  <div class="center-align card panel purple white-text">
    <h2>Home</h2></div>
  <div class="divider"></div>
  <div class="container">
    <div id="page-index">
      <div class="section">
        <div class="card panel grey darken-2 white-text">
          <h5>Demo</h5></div>
        <a href="/Demo" class="btn hoverable">Watch Video</a>
      </div>
      <div class="divider"></div>
      <div class="section">
        <div class="card panel grey darken-2 white-text">
          <h5>Room</h5></div>
        <div class="row">
          <div class ="col s12"></div>
          <div class="col s6">
            <a href="javascript:gotoUserRoom();" class="btn hoverable pulse">Start Room</a>
          </div>
          <div class="col s6">
            <a href="javascript:gotoUserJoin();" class="btn hoverable">Join Room</a>
          </div>
        </div>
      </div>
      <div class="divider"></div>
      <div class="section">
        <div class="card panel grey darken-2 white-text">
          <h5>Schedule</h5></div>
        <div>
          <a href="javascript:gotoUserSchedule();" class="btn hoverable">My Schedule</a>
        </div>
      </div>
    </div>
    <div class="divider"></div>
    <div class="section">
      <div class="row">
        <div class ="col s12"></div>
        <div class="card panel grey darken-2 white-text">
          <h5>sign-in-status</h5></div>
          <div class="section">
          <div class = "col s6">
            <div class="center-align card panel grey darken-1 white-text" id="sign-in-status"></div>
            <div id="sign-in"></div>
            <pre class="center-align card panel grey darken-1 white-text" id="account-details"></pre>
          </div>
        </div>
        <div class = "col s6" id="sign-out">
          <form method="post" action="/sessionLogout">
            <input type="submit" value="sign out" class="btn hoverable" onclick="Signout()">
          </form>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="./js/materialize.js"></script>
</body>
</html>
